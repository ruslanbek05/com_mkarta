<?xml version="1.0" encoding="utf-8"?>
<config>
    <fieldset
            name="analyses"
            label="COM_MKARTA_CONFIG_ANALYSES_SETTINGS_LABEL"
            description="COM_MKARTA_CONFIG_ANALYSES_SETTINGS_DESC"
    >
        <field
                name="show_category"
                type="radio"
                label="COM_MKARTA_ANALYSIS_FIELD_SHOW_CATEGORY_LABEL"
                description="COM_MKARTA_ANALYSIS_FIELD_SHOW_CATEGORY_DESC"
                default="0"
        >
            <option value="0">JHIDE</option>
            <option value="1">JSHOW</option>
        </field>

        <field
                name="captcha"
                type="plugins"
                folder="captcha"
                label="COM_MKARTA_ANALYSIS_FIELD_CAPTCHA_LABEL"
                description="COM_MKARTA_ANALYSIS_FIELD_CAPTCHA_DESC"
                default="0"
                filter="cmd"
        >
            <option value="">JOPTION_USE_DEFAULT</option>
            <option value="0">JOPTION_DO_NOT_USE</option>
        </field>
        <field
                name="user_to_email"
                type="user"
                label="COM_MKARTA_ANALYSIS_FIELD_USER_TO_EMAIL_LABEL"
                description="COM_MKARTA_ANALYSIS_FIELD_USER_TO_EMAIL_DESC"
                default="0"
        >
        </field>

    </fieldset>

    <fieldset
            name="permissions"
            label="JCONFIG_PERMISSIONS_LABEL"
            description="JCONFIG_PERMISSIONS_DESC"
    >
        <field
                name="rules"
                type="rules"
                label="JCONFIG_PERMISSIONS_LABEL"
                class="inputbox"
                validate="rules"
                filter="rules"
                component="com_mkarta"
                section="component"
        />
    </fieldset>

    <fieldset
            name="category"
            label="COM_MKARTA_CATEGORY_ACL_LABEL"
            description="COM_MKARTA_CATEGORY_ACL_DESC"
    >
        <field
                name="rules"
                type="rules"
                label="COM_MKARTA_CATEGORY_ACL_LABEL"
                class="inputbox"
                validate="rules"
                filter="rules"
                component="com_mkarta"
                section="category"
        />
    </fieldset>

    <fieldset
            name="analysis"
            label="COM_MKARTA_ANALYSIS_ACL_LABEL"
            description="COM_MKARTA_ANALYSIS_ACL_DESC"
    >
        <field
                name="rules"
                type="rules"
                label="COM_MKARTA_CATEGORY_ACL_LABEL"
                class="inputbox"
                validate="rules"
                filter="rules"
                component="com_mkarta"
                section="analysis"
        />
    </fieldset>

</config>